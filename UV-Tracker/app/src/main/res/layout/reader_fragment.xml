<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/editText"
        android:layout_width="289dp"
        android:layout_height="96dp"
        android:layout_below="@id/logo_image"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:inputType="textPersonName"
        android:paddingBottom="15dp"
        android:text="Take Care Tomorrow From:"
        android:textColor="#DB0000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/btn_spf"
        android:layout_width="105dp"
        android:layout_height="83dp"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="left|bottom"
        android:gravity="center"
        android:text="SPF: 20"
        android:textColor="#FDA505"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_data"
        android:layout_width="105dp"
        android:layout_height="83dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Data Analysis"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-19dp"
        android:ems="10"
        android:gravity="center"
        android:textColor="#FDA505"
        android:textSize="20sp"
        tools:text=" " />

    <TextView
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-95dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Time Remaining:"
        android:textColor="#DB0000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-330dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="UV Index:"
        android:textColor="#DB0000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_hours"
        android:layout_width="301dp"
        android:layout_height="72dp"
        android:layout_below="@+id/editText3"
        android:layout_alignBottom="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:layout_marginBottom="-118dp"
        android:gravity="center"
        android:text="2:30:29"
        android:textColor="#FDA505"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="301dp"
        android:layout_height="72dp"
        android:layout_below="@+id/editText3"
        android:layout_alignBottom="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="321dp"
        android:layout_marginBottom="-317dp"
        android:gravity="center"
        android:text="Not Connected"
        android:textColor="#FDA505"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="140dp"
        app:srcCompat="@drawable/timw2" />

</RelativeLayout>
